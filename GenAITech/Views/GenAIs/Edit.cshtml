@model GenAITech.Models.GenAI
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Edit Page";
}
<div class="parallax-container Add-new-Ai">
    <h1 class="main-heading">Add new AI GenAi WebSite</h1>
    <div class="container">
<div class="row">
    
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                    <label asp-for="GenAIName" class="control-label custom-label"></label>
                <input asp-for="GenAIName" class="form-control" />
                <span asp-validation-for="GenAIName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Summary" class="control-label custom-label"></label>
                    <textarea asp-for="Summary" class="form-control"></textarea>
                    <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label custom-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


